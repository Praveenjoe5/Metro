<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
   <servlet>
        <servlet-name>RequestCabController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.RequestCabController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelCabController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.CancelCabController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookCabController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.BookCabController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentCabController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.PaymentCabController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusCheckController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.StatusCheckController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUpdateController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.AdminUpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackController</servlet-name>
        <servlet-class>com.tm.metrocab.controller.FeedbackController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestCabController</servlet-name>
        <url-pattern>/RequestCabController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelCabController</servlet-name>
        <url-pattern>/CancelCabController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookCabController</servlet-name>
        <url-pattern>/BookCabController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentCabController</servlet-name>
        <url-pattern>/PaymentCabController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusCheckController</servlet-name>
        <url-pattern>/StatusCheckController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUpdateController</servlet-name>
        <url-pattern>/AdminUpdateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackController</servlet-name>
        <url-pattern>/FeedbackController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>HomePage.html</welcome-file>
    </welcome-file-list>
</web-app>
